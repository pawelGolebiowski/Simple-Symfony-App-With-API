{% extends 'base.html.twig' %}

{% block body %}
    <h1>Articles</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Authors</th>
            <th>Date</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.title }}</td>
                <td>
                    {% for author in article.authors %}
                        {{ author.firstName }} {{ author.lastName }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </td>
                <td>{{ article.createdAt|date('d/m/Y H:i:s') }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('article_show', {id: article.id}) }}">Show</a>
                    <a class="btn btn-secondary" href="{{ path('article_edit', {id: article.id}) }}">Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

